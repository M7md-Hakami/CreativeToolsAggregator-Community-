@model CreativeToolsAggregatorApp.Models.ToolsIndexViewModel

@{
    ViewData["Title"] = "Tools";
}
<style>
    table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    th, td {
        border: 1px solid #aaa;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #6381ed;
    }

    .logoSize {
        height: 30px;
        width: auto;
        object-fit: contain;
    }

    .placeholder {
        height: 30px;
        width: 30px;
        display: inline-block;
        background: #eee;
        border-radius: 4px;
    }
</style>

<h1>Tools</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add new tool</a>
</p>

@if (Model.Groups == null || !Model.Groups.Any())
{
    <div class="alert alert-info">No tools found.</div>
}
else
{
    foreach (var group in Model.Groups)
    {
        <section class="mb-4">
            <h2>@group.Tag</h2>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in group.Items)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(item.image))
                                {
                                    var src = item.image;
                                    // treat item.image as a full URL (external). If you later store relative URLs, you'll need to convert them appropriately.
                                    if (!string.IsNullOrWhiteSpace(item.link))
                                    {
                                        <a href="@item.link" target="_blank" rel="noopener noreferrer">
                                            <img src="@src" alt="@item.name" class="logoSize" />
                                        </a>
                                    }
                                    else
                                    {
                                        <img src="@src" alt="@item.name" class="logoSize" />
                                    }
                                }
                                else
                                {
                                    <span class="placeholder" title="No image"></span>
                                }
                            </td>
                            <td>@item.name</td>
                            <td>@item.description</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-info">Details</a>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    }
}